{
  "name":"ccs-ordinary-refined",
  "schedule" : [
    {
      "name" : "update-latency",
      "operation" : {
        "include-in-reporting" : false,
        "operation-type" : "update-latency",
        "latency" : {{ latency }}
      }
    },
    {
      "name" : "prepare-indices",
      "operation" : {
        "include-in-reporting" : false,
        "operation-type" : "prepare-indices",
        "index" : "{{ index }}"
      }
    },
    {
      "name" : "match-all-random-sort-size-10",
      "operation" : {
        "operation-type": "search",
        "param-source": "match-all-random-sort",
        "index" : "*:{{ index }}",
        "seed": {{ seed }},
        "size" : 10
      },
      "warmup-iterations": 10,
      "iterations": {{ iters }}
    },
    {
      "name" : "match-all-random-sort-size-100",
      "operation" : {
        "operation-type": "search",
        "param-source": "match-all-random-sort",
        "index" : "*:{{ index }}",
        "seed": {{ seed }},
        "size" : 100
      },
      "warmup-iterations": 10,
      "iterations": {{ iters }}
    },
    {  
      "name" : "terms-aggs-cache",
      "operation" : {
        "operation-type": "search",
        "index" : "*:{{ index }}",
        "cache" : true,
        "body": {
          "size": 0,
          "aggs" : {
            "type": {
              "terms": {
                "field": "type.keyword"
              }
            },
            "answers": {
              "filter": {
                "term": {
                  "type": "answer"
                }
              },
              "aggs" : {
                "answer_per_user" : {
                  "terms" : {
                    "field": "user.keyword",
                    "size": 100
                  }
                }
              }
            }
          }
        }
      },
      "warmup-iterations": 10,
      "iterations": {{ iters }}
    }
  ]
}
